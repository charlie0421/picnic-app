{
    "tasks": {
        "dev": "deno run --watch --allow-net --allow-env --allow-read index.ts"
    },
    "imports": {
        "@/lib/": "./lib/",
        "@/functions/": "./functions/"
    },
    "compilerOptions": {
        "allowJs": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true
    },
    "fmt": {
        "files": {
            "include": [
                "lib/",
                "functions/"
            ]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 100,
            "indentWidth": 2,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "lint": {
        "files": {
            "include": [
                "lib/",
                "functions/"
            ]
        },
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    }
}
