{
  "tasks": {
    "start": "deno run --allow-net --allow-env index.ts",
    "dev": "deno run --watch --allow-net --allow-env --allow-read index.ts"
  },
  "imports": {
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.39.3",
    "crypto-js": "https://esm.sh/crypto-js",
    "postgres": "https://deno.land/x/postgres@v0.17.0/mod.ts",
    "http/server": "https://deno.land/std@0.208.0/http/server.ts",
    "@shared/": "./shared/"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "deno.ns", "deno.unstable", "dom", "esnext"],
    "strict": true,
    "checkJs": false
  },
  "fmt": {
    "files": {
      "include": ["lib/", "functions/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "lint": {
    "files": {
      "include": ["lib/", "functions/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  }
}
